{
    "$schema": "https://schemas.wp.org/wp/6.5/theme.json",
    "version": 2,
    "patterns": [
        "three-columns-of-services",
        "clients-section"
    ],
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "900px",
            "wideSize": "1200px"
        },
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "name": "Primary",
                    "slug": "primary",
                    "fontFamily": "'Aeonik Pro', sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Aeonik Pro",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/AeonikPro/AeonikPro-Light.otf"
                            ]
                        },
                        {
                            "fontFamily": "Aeonik Pro",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Aeonik Pro/AeonikPro-Regular.otf"
                            ]
                        },
                        {
                            "fontFamily": "Aeonik Pro",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Aeonik Pro/AeonikPro-Medium.otf"
                            ]
                        },
                        {
                            "fontFamily": "Aeonik Pro",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": [
                                "file:./assets/fonts/Aeonik Pro/AeonikPro-Bold.otf"
                            ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "fluid": {
                        "min": "0.6875rem",
                        "max": "0.75rem"
                    },
                    "name": "Super Small",
                    "size": "0.75rem",
                    "slug": "ssmall"
                },
                {
                    "fluid": {
                        "min": "0.75rem",
                        "max": "0.875rem"
                    },
                    "name": "Small",
                    "size": "0.875rem",
                    "slug": "small"
                },
                {
                    "fluid": {
                        "min": "0.9375rem",
                        "max": "1rem"
                    },
                    "name": "Paragraph",
                    "size": "1rem",
                    "slug": "paragraph"
                },
                {
                    "fluid": {
                        "min": "1.125rem",
                        "max": "1.25rem"
                    },
                    "name": "Medium",
                    "size": "1.25rem",
                    "slug": "medium"
                },
                {
                    "fluid": {
                        "min": "1.25rem",
                        "max": "1.375rem"
                    },
                    "name": "Large",
                    "size": "1.5rem",
                    "slug": "large"
                },
                {
                    "fluid": {
                        "min": "2rem",
                        "max": "3rem"
                    },
                    "name": "Extra Large",
                    "size": "3rem",
                    "slug": "x-large"
                }
            ],
            "writingMode": true
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "elements": {
            "h1": {
                "typography": {
                    "fontSize": "clamp(1.625rem, calc(0.5rem + 2.16vw), 2rem)",
                    "lineHeight": "clamp(2rem, 1.8rem + 1vw, 2.5rem)",
                    "fontWeight": "500"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "clamp(1.625rem, calc(1.2rem + 1.2vw), 2rem)",
                    "lineHeight": "clamp(2rem, calc(1.5rem + 1vw), 2.625rem)",
                    "fontWeight": "500"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "clamp(1.25rem, calc(0.875rem + 1.5vw), 1.75rem)",
                    "lineHeight": "clamp(1.625rem, calc(1.25rem + 1.5vw), 2.375rem)",
                    "fontWeight": "500"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "clamp(1.125rem, calc(0.5rem + 2.16vw), 1.25rem)",
                    "lineHeight": "clamp(1.5rem, 1.3rem + 0.6vw, 1.625rem)",
                    "fontWeight": "500"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "lineHeight": "1.4rem",
                    "fontWeight": "500"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "lineHeight": "1.3rem",
                    "fontWeight": "500"
                }
            },
            "link": {
                "typography": {
                    "textDecoration": "none"
                }
            }
        },
        "typography": {
            "fontFamily": "'Aeonik Pro', sans-serif",
            "fontSize": "clamp(0.9375rem, 1vw + 0.8rem, 1rem)",
            "fontStyle": "normal",
            "fontWeight": "400",
            "letterSpacing": "0",
            "lineHeight": "clamp(1.4375rem, 1.2vw + 1rem, 1.5rem)",
            "textDecoration": "none"
        },
        "blocks": {
            "core/paragraph": {
                "color": {
                    "text": "#101010"
                }
            },
            "core/heading": {
                "color": {
                    "text": "#101010"
                }
            },
            "core/pullquote": {
                "typography": {
                    "fontSize": "clamp(0.9375rem, 1vw + 0.8rem, 1rem)",
                    "lineHeight": "clamp(1.4375rem, 1.2vw + 1rem, 1.5rem)"
                }
            }
        },
        "css": ":where(.wp-site-blocks *:focus){outline-width:2px;outline-style:solid}"
    }
}